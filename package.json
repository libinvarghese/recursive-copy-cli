{
  "name": "recursive-copy-cli",
  "version": "1.0.0",
  "description": "",
  "homepage": "http://documentcloud.github.com/underscore/",
  "main": "./dist/cli.js",
  "bin": {
    "rc": "./dist/cli.js"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "check:format": "prettier -c './**/*.{js,ts,json,css,scss,html}'",
    "format:fix": "prettier --write './**/*.{js,ts,json,css,scss,html}'",
    "lint:json": "eslint --no-eslintrc -c .eslintrc.json.js --ext .json --format=unix .",
    "lint:src": "eslint --ext .js,.ts --format=unix .",
    "lint": "run-p lint:*",
    "clean": "rimraf dist",
    "build": "tsc -p tsconfig.${NODE_ENV:=development}.json",
    "rebuild": "run-s clean build",
    "precommit": "run-p lint check:format checkNotStaged",
    "checkNotStaged": "ts-node -P scripts/tsconfig.json scripts/check-not-staged.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "engine": {
    "node": ">=10.19.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/eslint-plugin-prettier": "^2.2.0",
    "@types/node": "^13.7.6",
    "@types/prettier": "^1.19.0",
    "@types/rimraf": "^2.0.3",
    "@types/typescript": "^2.0.0",
    "@types/yargs": "^15.0.4",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-json": "^2.1.0",
    "eslint-plugin-no-secrets": "^0.3.4",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-optimize-regex": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.9.0",
    "husky": "^4.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "simple-git": "^1.132.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "recursive-copy": "^2.0.10",
    "yargs": "^15.3.1"
  }
}
