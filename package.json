{
  "name": "recursive-copy-cli",
  "version": "1.0.0",
  "description": "CLI for [recursive-copy](https://github.com/timkendrick/recursive-copy)",
  "repository": "https://github.com/libinvarghese/recursive-copy-cli",
  "homepage": "https://github.com/libinvarghese/recursive-copy-cli",
  "keywords": [
    "cli",
    "copy",
    "recursive-copy",
    "rename-files",
    "transforming-files"
  ],
  "author": "Libin Varghese <libinv@gmail.com>",
  "license": "ISC",
  "engine": {
    "node": ">=10.19.0"
  },
  "main": "./dist/src/cli.js",
  "bin": {
    "recursive-copy": "./dist/src/cli.js"
  },
  "scripts": {
    "start": "ts-node src/cli.ts",
    "format:fix": "prettier --write './**/*.{js,ts,json,css,scss,html}'",
    "lint:format": "prettier -c './**/*.{js,ts,json,css,scss,html}'",
    "lint:json": "eslint --no-eslintrc -c .eslintrc.json.js --ext .json --format=unix .",
    "lint:yaml": "yamllint -f parsable .",
    "lint:src": "eslint --ext .js,.ts --format=unix .",
    "lint": "run-p lint:*",
    "clean": "rimraf dist/src && ts-node scripts/publish-package.ts",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.${NODE_ENV:=development}.json",
    "postbuild": "npm run build:test",
    "build:prod": "NODE_ENV=production npm run build",
    "build:test": "mocha test/**/*.spec.e2e.ts",
    "precommit:parallel": "run-p lint cover",
    "precommit": "run-s checkNotStaged precommit:parallel",
    "checkNotStaged": "ts-node -P scripts/tsconfig.json scripts/check-not-staged.ts",
    "test:yargs": "mocha src/**/*.spec.ts",
    "test:cli": "mocha src/**/*.spec.e2e.ts",
    "test": "run-p test:*",
    "cover:yargs": "nyc --check-coverage false --silent npm run test:yargs",
    "cover:cli": "nyc --check-coverage false --silent --no-clean npm run test:cli",
    "cover:report": "nyc report",
    "cover": "run-s cover:*",
    "git-commit": "commit"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run precommit",
      "post-checkout": "scripts/hooks/post-checkout/update-deps.sh",
      "post-merge": "scripts/hooks/post-merge/update-deps.sh"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/prompt-cli": "^8.3.5",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@jsdevtools/chai-exec": "^2.0.4",
    "@types/chai": "^4.2.11",
    "@types/chai-arrays": "^1.0.3",
    "@types/chai-fs": "^2.0.2",
    "@types/eslint": "^6.8.1",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/highland": "^2.12.10",
    "@types/lodash": "^4.14.152",
    "@types/mocha": "^7.0.2",
    "@types/mock-fs": "^4.10.0",
    "@types/node": "^14.0.5",
    "@types/prettier": "^2.0.1",
    "@types/rimraf": "^3.0.0",
    "@types/sinon": "^9.0.3",
    "@types/sinon-chai": "^3.2.4",
    "@types/source-map-support": "^0.5.1",
    "@types/through2": "^2.0.36",
    "@types/typescript": "^2.0.0",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "chai": "^4.2.0",
    "chai-arrays": "^2.0.0",
    "chai-fs": "^2.0.0",
    "chai-semver": "^1.0.2",
    "eol": "^0.9.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-mocha": "^6.3.0",
    "eslint-plugin-no-secrets": "^0.6.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-optimize-regex": "^1.2.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.10.0",
    "husky": "^4.2.5",
    "mocha": "^7.1.2",
    "mock-fs": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.1",
    "pascalcase": "^1.0.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "simple-git": "^2.5.0",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.19",
    "through2": "^3.0.1",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "highland": "^2.13.5",
    "lodash": "^4.17.15",
    "recursive-copy": "^2.0.10",
    "requireg": "^0.2.2",
    "yargs": "^15.3.1"
  }
}
