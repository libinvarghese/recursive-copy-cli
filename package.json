{
  "name": "recursive-copy-cli",
  "version": "1.0.14",
  "description": "CLI for [recursive-copy](https://github.com/timkendrick/recursive-copy)",
  "repository": "https://github.com/libinvarghese/recursive-copy-cli.git",
  "homepage": "https://github.com/libinvarghese/recursive-copy-cli",
  "keywords": [
    "cli",
    "copy",
    "recursive-copy",
    "rename-files",
    "transforming-files"
  ],
  "author": "Libin Varghese <libinv@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": ">=10.19.0"
  },
  "main": "./dist/src/cli.js",
  "bin": {
    "recursive-copy": "./dist/src/cli.js"
  },
  "scripts": {
    "start": "ts-node src/cli.ts",
    "format:fix": "prettier --write './**/*.{js,ts,json,css,scss,html}'",
    "lint:format": "prettier -c './**/*.{js,ts,json,css,scss,html}'",
    "lint:json": "eslint --no-eslintrc -c .eslintrc.json.js --ext .json --format=unix .",
    "lint:yaml": "yamllint -f parsable .",
    "lint:src": "eslint --ext .js,.ts --format=unix .",
    "lint": "run-p lint:*",
    "prebuild:copy:others": "cp README.md dist",
    "prebuild:copy:package": "npx ts-node scripts/publish-package.ts",
    "prebuild:copy": "run-p prebuild:copy:*",
    "prebuild:clean": "rimraf !dist/.npmignore dist/**/*",
    "prebuild": "run-p prebuild:*",
    "build": "tsc -p tsconfig.${NODE_ENV:=development}.json",
    "postbuild": "npm run build:test",
    "build:prod": "NODE_ENV=production npm run build",
    "build:test": "mocha test/**/*.spec.e2e.ts",
    "precommit:parallel": "run-p lint cover",
    "precommit": "run-s js2yaml checkNotStaged precommit:parallel",
    "checkNotStaged": "ts-node -P scripts/tsconfig.json scripts/check-not-staged.ts",
    "js2yaml": "npx ts-node scripts/js2yaml.ts '/**/*.yml.ts' .github/jsTemplates .github",
    "test:yargs": "mocha src/**/*.spec.ts",
    "test:cli": "mocha src/**/*.spec.e2e.ts",
    "test": "run-p test:*",
    "cover:yargs": "nyc --silent npm run test:yargs",
    "cover:cli": "nyc --silent --no-clean npm run test:cli",
    "cover:report": "nyc --check-coverage ${CHECK_COVERAGE:=false} report",
    "cover": "run-s cover:*",
    "git-commit": "commit",
    "prepublishOnly": "npm run prebuild:copy",
    "release": "HUSKY_SKIP_HOOKS=1 semantic-release --no-ci --debug",
    "release:local": "run-s build:prod release",
    "release:dryrun": "npm run release -- --dry-run"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run precommit",
      "post-checkout": "scripts/hooks/post-checkout/update-deps.sh",
      "post-merge": "scripts/hooks/post-merge/update-deps.sh"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/prompt-cli": "^11.0.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@jsdevtools/chai-exec": "^2.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/bluebird": "^3.5.32",
    "@types/chai": "^4.2.12",
    "@types/chai-arrays": "^1.0.3",
    "@types/chai-fs": "^2.0.2",
    "@types/eslint": "^7.2.0",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/glob": "^7.1.3",
    "@types/highland": "^2.12.10",
    "@types/js-yaml": "^3.12.5",
    "@types/lodash": "^4.14.158",
    "@types/mocha": "^8.0.0",
    "@types/mock-fs": "^4.10.0",
    "@types/node": "^14.0.24",
    "@types/nodemon": "^1.19.0",
    "@types/prettier": "^2.0.2",
    "@types/rimraf": "^3.0.0",
    "@types/semantic-release": "^17.1.0",
    "@types/sinon": "^9.0.4",
    "@types/sinon-chai": "^3.2.4",
    "@types/source-map-support": "^0.5.2",
    "@types/through2": "^2.0.36",
    "@types/typescript": "^2.0.0",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "bluebird": "^3.7.2",
    "chai": "^4.2.0",
    "chai-arrays": "^2.2.0",
    "chai-fs": "^2.0.0",
    "chai-semver": "^1.0.2",
    "eol": "^0.9.1",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-no-secrets": "^0.6.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-optimize-regex": "^1.2.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.10.0",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "js-yaml": "^3.14.0",
    "mocha": "^8.0.1",
    "mock-fs": "^4.12.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "pascalcase": "^1.0.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.1.1",
    "semantic-release-git-branches": "^1.2.1",
    "simple-git": "^2.15.0",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.19",
    "through2": "^4.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "highland": "^2.13.5",
    "lodash": "^4.17.19",
    "recursive-copy": "^2.0.10",
    "requireg": "^0.2.2",
    "yargs": "^16.0.1"
  }
}
